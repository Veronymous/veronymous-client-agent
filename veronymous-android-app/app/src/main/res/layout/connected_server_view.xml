<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/connected_server_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/vpn_server"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/connected_server_flag_view"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/connected_server_flag_view"
        app:layout_constraintTop_toBottomOf="@+id/connected_server_flag_view" />

    <ImageView
        android:id="@+id/connected_server_flag_view"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/veronymous_icon_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>